RewriteRule ^payroll/limit/([0-9]+)/([0-9]+)$ controllers/payroll/limit.php?start=$1&total=$2 [L]
RewriteRule ^payroll/search/([A-Za-z0-9-]+)$ controllers/payroll/search.php?search=$1 [L]
   
#payroll list
RewriteRule ^payrollList$ controllers/payroll/view/payrollView.php [L]
RewriteRule ^payrollList/([0-9]+)$ controllers/payroll/view/payrollView.php?listpayrollid=$1 [L] 
RewriteRule ^payrollList/limit/([0-9]+)/([0-9]+)/([0-9]+)$ controllers/payroll/view/limit.php?start=$1&total=$2&listpayrollid=$3 [L]
RewriteRule ^payrollList/search/([A-Za-z0-9-]+)$ controllers/payroll/view/search.php?search=$1 [L]
   
#earnings
